    "next-themes": "^0.3.0",
    "openai": "^6.16.0",
    "pino": "^10.2.1",
    "pino-pretty": "^13.1.3",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-markdown": "^9.0.0",
