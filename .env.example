# ===========================================
# Ondo AI Environment Configuration
# ===========================================
# Copy this file to .env.local for development
# or set these variables in your deployment environment

# -------------------------------------------
# Database (Required)
# -------------------------------------------
DATABASE_URL="file:./dev.db"
# For production with Turso:
# DATABASE_URL="libsql://your-database.turso.io"
# DATABASE_AUTH_TOKEN="your-turso-auth-token"

# -------------------------------------------
# Authentication (Required for Production)
# -------------------------------------------
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-min-32-chars

# Okta SSO (Required for Production)
OKTA_CLIENT_ID=
OKTA_CLIENT_SECRET=
OKTA_ISSUER=https://your-org.okta.com/oauth2/default

# -------------------------------------------
# AI Provider API Keys
# -------------------------------------------
# At least one provider is required
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# -------------------------------------------
# Glean Integration (Enterprise Search)
# -------------------------------------------
GLEAN_API_KEY=glean-...
GLEAN_API_URL=https://api.glean.com/api/v1

# -------------------------------------------
# Internal Services
# -------------------------------------------
ONDOBOT_API_URL=https://ondobot.internal.company.com/api
ONDOBOT_API_KEY=

# Internal API key for action endpoints (generate a secure random string)
ACTIONS_API_KEY=

# -------------------------------------------
# External Services
# -------------------------------------------
# Web Search (Tavily)
TAVILY_API_KEY=tvly-...

# Future integrations
# HUBSPOT_API_KEY=
# JIRA_API_TOKEN=
# SLACK_BOT_TOKEN=

# -------------------------------------------
# Intelligent Routing Configuration
# -------------------------------------------
ROUTING_MODE=rule_based           # or 'llm_hybrid' for LLM-assisted classification
ROUTING_CONFIDENCE_THRESHOLD=0.7  # Minimum confidence for auto-routing (0.0-1.0)
ENABLE_AUTO_ROUTING=false         # Enable auto-routing by default

# -------------------------------------------
# Logging & Monitoring
# -------------------------------------------
LOG_LEVEL=info                    # debug, info, warn, error
LOG_PRETTY=true                   # Pretty print logs in development

# Sentry Error Tracking
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=
APP_VERSION=
NEXT_PUBLIC_APP_VERSION=
